datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt   DateTime  @default(now())
  firstName   String?
  id          String    @id @default(cuid())
  lastName    String?
  listings    Listing[]
  password    String
  roles       Json
  trips       Trip[]
  updatedAt   DateTime  @updatedAt
  username    String    @unique
  wishlists   Wishlist? @relation(fields: [wishlistsId], references: [id])
  wishlistsId String?   @unique
}

model Listing {
  createdAt    DateTime   @default(now())
  id           String     @id @default(cuid())
  locationData Json
  locationType String
  mapData      Json
  photos       Json
  placeSpace   Json
  placeType    String
  trips        Trip[]
  updatedAt    DateTime   @updatedAt
  user         User       @relation(fields: [userId], references: [id])
  userId       String
  wishlists    Wishlist[]
}

model Wishlist {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  listing   Listing  @relation(fields: [listingId], references: [id])
  listingId String
  updatedAt DateTime @updatedAt
  user      User?
}

model Trip {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  listing   Listing  @relation(fields: [listingId], references: [id])
  listingId String
  tripInfo  Json
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}
